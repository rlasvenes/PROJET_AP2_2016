on fait un constructeur de view, genre view(SCREEN_WIDTH, SCREEN_HEIGHT, 1); // 1 est un int (ou string, à voir)

et dans le constructeur (View::View(int w, int h, int mode)), faire un :

switch (mode)
{
    case 1:
        std::cout << "Menu" << std::endl;
	// charger ici tout les éléments pour le menu
	break;

    case 2:
	std::cout << "Jeu" << std::endl;
	// idem, charger tout ici
	break;

    case 3:
	std::cout << "Boutique" << std::endl;
	// idem, on charge tout
	break;

    case 4:
	std::cout << "Meilleurs scores" << std::endl;
	// on charge tout
	break;

    default :
	break;
}
